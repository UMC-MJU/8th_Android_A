                        android:layout_height="150dp"
                        android:contentDescription="@string/home_daily_music_album_img_iv"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_potcast_exp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/home_daily_music_album_img_play_iv1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="5dp"
                        android:contentDescription="@string/home_daily_music_album_img_play_iv"
                        android:src="@drawable/widget_black_play"
                        app:layout_constraintBottom_toBottomOf="@id/home_daily_music_album_img_iv1"
