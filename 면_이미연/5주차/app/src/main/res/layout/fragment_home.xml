                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/home_daily_music_album_title_tv"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@id/home_daily_music_album_img_iv1"
                        app:layout_constraintTop_toBottomOf="@id/home_daily_music_album_img_iv1" />

                    <TextView
                        android:id="@+id/home_daily_music_album_artist_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/home_daily_music_album_artist_tv"
                        android:textColor="@color/gray_color"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="@id/home_daily_music_album_title_tv1"
                        app:layout_constraintTop_toBottomOf="@id/home_daily_music_album_title_tv1" />

