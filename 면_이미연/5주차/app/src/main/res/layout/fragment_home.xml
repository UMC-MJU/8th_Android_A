                        android:id="@+id/home_daily_music_album_title_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/home_daily_music_album_title_tv"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@id/home_daily_music_album_img_iv2"
                        app:layout_constraintTop_toBottomOf="@id/home_daily_music_album_img_iv2" />

                    <TextView
                        android:id="@+id/home_daily_music_album_artist_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/home_daily_music_album_artist_tv"
                        android:textColor="@color/gray_color"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="@id/home_daily_music_album_title_tv2"
                        app:layout_constraintTop_toBottomOf="@id/home_daily_music_album_title_tv2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp">

                    <ImageView
                        android:id="@+id/home_daily_music_album_img_iv3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:contentDescription="@string/home_daily_music_album_img_iv"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_potcast_exp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/home_daily_music_album_img_play_iv3"
                        android:layout_width="40dp"
