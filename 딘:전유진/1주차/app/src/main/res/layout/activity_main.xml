<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingTop="50dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/txt_Title"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="오늘 하루는 어땠나요?"
        android:textSize="33sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:fontFamily="@font/gangwon_edu_hyeonok"/>

    <TextView
        android:id="@+id/txt_Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/gangwon_edu_hyeonok"
        android:gravity="center"
        android:text="감정우표를 선택해주세요"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/txt_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="선택한 감정우표를 기반으로 맞춤형 질문이 배달됩니다"
        android:textSize="8sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:fontFamily="@font/dream"/>

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:src="@drawable/happy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="너무 행복한 하루였어요"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:fontFamily="@font/gangwon_edu_hyeonok"/>
    <ImageView
        android:id="@+id/icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:src="@drawable/enjoy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="들뜨고 흥분돼요"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:fontFamily="@font/gangwon_edu_hyeonok"/>

    <ImageView
        android:id="@+id/icon3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:src="@drawable/normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="평범한 하루였어요"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:fontFamily="@font/gangwon_edu_hyeonok"/>

    <ImageView
        android:id="@+id/icon4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:src="@drawable/nervous" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="생각이 많아지고 불안해요"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:fontFamily="@font/gangwon_edu_hyeonok"/>

    <ImageView
        android:id="@+id/icon5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:src="@drawable/angry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="부글부글 화가 나요"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:fontFamily="@font/gangwon_edu_hyeonok"/>

</LinearLayout>
